<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="PortfolioDB" connectionString="Data Source=NAFIZ\SQLEXPRESS;Initial Catalog=PortfolioDB;Integrated Security=True" providerName="System.Data.SqlClient" />
  </connectionStrings>
  
  <system.web>
    <compilation debug="true" targetFramework="4.0" />
    <httpRuntime targetFramework="4.0" />
    <pages validateRequest="false" />
    
    <!-- Simple Session Configuration -->
    <sessionState mode="InProc" timeout="30" />
    
    <!-- Basic HTTP Cookies Configuration -->
    <httpCookies httpOnlyCookies="false" requireSSL="false" />
  </system.web>
  
  <system.webServer>
    <defaultDocument>
      <files>
        <clear />
        <add value="Default.aspx" />
      </files>
    </defaultDocument>
  </system.webServer>
</configuration>
